---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Shah Jacob - Software Engineering Intern",
  description = "CS student at Queens College, interested in backend/infra and distributed systems with experience in full-stack engineering."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&family=Merriweather:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">
    <ViewTransitions />
  </head>
  <body>
    <nav>
      <div class="logo">
        <a href="/">SJ</a>
      </div>
      <div class="nav-links">
        <a href="/projects">Projects</a>
        <a href="/contact">Contact</a>
      </div>
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Geist Mono';
    src: url('/fonts/GeistMono-Regular.woff2') format('woff2');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Geist Mono';
    src: url('/fonts/GeistMono-Medium.woff2') format('woff2');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  :root {
    --background: #0a0a0a;
    --text: #ffffff;
    --text-secondary: #888888;
  }
  
  html, body {
    margin: 0;
    padding: 0;
    background-color: var(--background);
    color: var(--text);
    font-family: "Geist", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
  }

  .logo a {
    font-size: 2em;
    font-weight: 600;
    font-style: normal;
    text-decoration: none;
    color: var(--text);
    transition: color 0.2s ease;
  }

  .logo a:hover {
    color: #f7c66f;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    padding-right: 1rem;
  }

  .nav-links a {
    font-family: "Merriweather", serif;
    font-weight: 300;
    font-style: italic;
    color: #ffffff;
    text-decoration: none;
    margin-left: 2rem;
    font-size: 1.4rem;
  }

  @media (max-width: 768px) {
    nav {
      padding: 1rem;
    }
    
    .nav-links {
      padding-right: 0.5rem;
    }

    .nav-links a {
      margin-left: 1rem;
      font-size: 1rem;
    }
  }

  .nav-links a:hover {
    color: #f7c66f;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 4rem;
  }
</style> 
