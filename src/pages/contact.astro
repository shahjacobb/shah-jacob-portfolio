---
import DarkLayout from '../layouts/DarkLayout.astro';
---

<DarkLayout>
  <div class="contact-container">
    <h1>Contact Me</h1>
    
    <div class="contact-item">
      <span class="label">Phone</span>
      <div class="detail">646-256-5894</div>
    </div>

    <div class="contact-item">
      <span class="label">Email</span>
      <div class="detail">shahjacob98@gmail.com</div>
    </div>
  </div>
</DarkLayout>

<style>
  h1 {
    font-size: 3.5rem;
    margin-bottom: 3rem;
    text-align: left;
    color: #ffffff;
  }

  .contact-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .contact-item {
    margin: 2rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  

  .label {
    font-family: "Merriweather", serif;
    font-size: 1.8rem;
    color: #f7c66f;
    display: block;
  }

  .detail {
    font-family: "Geist", sans-serif;
    font-size: 1.6rem;
    color: #ffffff;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }

    .contact-container {
      padding: 1.5rem;
    }

    .label {
      font-size: 1.4rem;
    }

    .detail {
      font-size: 1.2rem;
    }
  }
</style>